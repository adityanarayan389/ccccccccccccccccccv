<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task1" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Wallpaper" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:navigationBarColor">@color/material_on_background_emphasis_high_type</item>
        <item name="colorPrimaryDark">@color/design_default_color_on_secondary</item>

    </style>
</resources>